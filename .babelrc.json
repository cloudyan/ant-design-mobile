{
  "presets": [
    [
      "@babel/preset-env",
      {
        "loose": true,
        "modules": false
      }
    ],
    "@babel/preset-typescript",
    "@babel/preset-react"
  ],
  "plugins": [
    "babel-plugin-transform-async-to-promises",
    ["replace-import-extension", { "extMapping": { ".less": ".css" } }]
  ],
  "ignore": ["**/demos"]
}
